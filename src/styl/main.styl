// Variables
$border-color = 2px solid desaturate(lighten($brand-4, 15), 35)


// Supporting classes
.repaint
	color #FC8F9B

.new-line
	width 100%

.container-flex
	display flex
	
.unlist
	list-style none
	

// Main content
.page-heading
	text-align center

// Content menu

// Slider
.container-slider
	margin 20px 0 50px 0
	& img
		width 100%
		height 300px
		object-fit cover

// Gallery
.container-gallery
	display grid
	grid-gap 15px

.gallery-item
	width 100%
	display block
	object-fit cover
	&:nth-child(1)
		height 385px
		grid-row 1 / span 2
		grid-column 1 / span 2
	&:nth-child(2)
		height 185px
		grid-row 1 / span 1
		grid-column 3 / span 2
	&:nth-child(3)
		height 185px
		grid-row 2 / span 4
		grid-column 3 / span 2
	&:nth-child(4)
		height 185px
		grid-row 3 / span 4
		grid-column 1 / span 2
	&:nth-child(5)
		height 185px
		grid-row 5 / span 4
		grid-column 1 / span 2
	&:nth-child(6)
		height 385px
		grid-row 3 / span 4
		grid-column 3 / span 1
	&:nth-child(7)
		height 185px
		grid-row 3 / span 2
		grid-column 4 / span 1
	&:nth-child(8)
		height 185px
		grid-row 5 / span 2
		grid-column 4 / span 1




// Feature
.container-feature
	margin-bottom 50px
	display flex

.feature-item
	&:not(:last-of-type)
		margin-right 60px
	// Feature headings
	&__heading
		text-align center
	// Feature images
	&__img
		width 52px
		height 50px
		background-image url("https://png.icons8.com/ios/1600/design.png")
		background-size cover
		background-position 50% 50%
		background-repeat no-repeat
	// Feature texts
	&__text
		margin-top 30px
		padding-top 20px
		border-top $border-color




// Brands section
.container-brands
	border-top $border-color
	border-bottom $border-color
	background lighten($brand-4, 62)

.brands-list
	display flex
	@extend .unlist
	align-items center
	&__item-link
		text-decoration none
	&__item-img
		width 130px
		height auto







.container-flex
	flex-flow row wrap