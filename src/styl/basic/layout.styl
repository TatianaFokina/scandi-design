.grid-layout
	margin 0
	display grid
	grid-template-areas "header"\
	"container"\
	"footer"
	// Sticky footer
	grid-template-rows auto 1fr auto
	min-height 100%

.header
	grid-area header

.container
	grid-area container

.footer
	grid-area footer




