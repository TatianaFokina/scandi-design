.header-menu
	width 100%

.menu__list
.container-menu__list
	display flex
	
.menu
	&__list
		list-style none
	&__link
		padding 0 15px
		display block
	&__name
		padding 10px 0 3px 0
		display block
		position relative
		border-bottom 2px solid $brand-3
		&:after
			content ""
			background $brand-3
			opacity 0.3
			width 100%
			height 0
			position absolute
			bottom 0
			left 0
			transition all .2s cubic-bezier(0.445, 0.05, 0.55, 0.95)
		
.menu__link:hover .menu__name:after
	height 100%
