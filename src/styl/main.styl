// Variables
$border-color = 2px solid desaturate(lighten($brand-4, 15), 35)


// Supporting classes
.repaint
	color #FC8F9B




// Main content
.page-heading
	text-align center

// Slider
.container-carousel
	max-width 100%
	
.carousel
	width 100%
	display table
	position relative
	overflow hidden
	&-list
		margin 0
		padding 0
		width calc(100% * 4)
		position relative
		top 0
		left 0
		list-style none
		transition transform 1s ease-in-out // Animation!
	&-slide
		width calc(100%/4)
		display inline
		float left
		&__img
			max-width 100%
			height auto

.slide-button
	position absolute
	top calc(50% - 25px)
	background $brand-4
	font-size 35px
	color #fff
	border 0
	cursor pointer
	&__prev
		left 0
		border-radius 0 5px 5px 0
	&__next
		right 0
		border-radius 5px 0 0 5px
	&:hover
		background darken($brand-4, 10)

.carousel-dots
	width 100%
	display flex
	justify-content center
	position absolute
	bottom 20px

.dot
	margin-right 4px
	width 15px
	height @width
	background $brand-4
	border-radius 50%
	cursor pointer
	&:hover
		background darken($brand-4, 15)

.js-dot-active
	background darken($brand-4, 15)




// Gallery
.container-gallery
	display grid
	grid-gap 15px

.card
	position relative
	// Card height
	&--height-1
	&--height-2
		height 185px
	// Adaptive styles
	+media(md)
		&--1
			grid-row 1 / span 2
			grid-column 1 / span 2
		&--2
			grid-row 1 / span 1
			grid-column 3 / span 2
		&--3
			grid-row 2 / span 4
			grid-column 3 / span 2
		&--4
			grid-row 3 / span 4
			grid-column 1 / span 2
		&--5
			grid-row 5 / span 4
			grid-column 1 / span 2
		&--6
			grid-row 3 / span 4
			grid-column 3 / span 1
		&--7
			grid-row 3 / span 2
			grid-column 4 / span 1
		&--8
			grid-row 5 / span 2
			grid-column 4 / span 1
		// Card height
		&--height-1
			height 385px
		&--height-2
			height 185px

		
.card-img
	width 100%
	height 100%
	background-size cover
	background-repeat no-repeat
	background-position 50% 50%
	&--1
		background-image url("../imgs/gallery/prew-scandi-livingroom.jpg")
	&--2
		background-image url("../imgs/gallery/prew-scandi-kitchen.jpg")
	&--3
		background-image url("../imgs/gallery/prew-scandi-bedroom.jpg")
	&--4
		background-image url("../imgs/gallery/prew-scandi-bathroom.jpg")
	&--5
		background-image url("../imgs/gallery/prew-scandi-paint.jpg")
	&--6
		background-image url("../imgs/gallery/prew-scandi-lamp.jpg")
	&--7
		background-image url("../imgs/gallery/prew-scandi-materials.jpg")
	&--8
		background-image url("../imgs/gallery/prew-scandi-furniture.jpg")

// Card content & animation
.card
	&__overlay
	&__content-wrp
		position absolute
	&__content-wrp
		width 100%
		height 100%
		top 0
		display flex
		align-items center
		justify-content center
	&__overlay
		width 100%
		height 100%
		top 0
		left 0
		background-color rgba(107, 107, 107, 0.69)
		outline 2px solid rgba(255, 255, 255, 0)
		outline-offset -11px
		transition all 0.7s
	&__content
		max-width 260px
	&__title
		color $brand-1
		font-family "Dancing Script", cursive
		font-weight bold
		font-size 2rem
	&__text
		opacity 0
		color $brand-1
		transform translateY(16px)
		transition all 0.7s
	// Card hover effects
	&:hover ^[0]__text
		opacity 1
		transform translateY(0)
	&:hover ^[0]__overlay
		outline-color rgba(255, 255, 255, 0.3)




// Feature
.container-feature
	margin-left -1rem
	margin-right -1rem
	margin-bottom 50px
	display flex
	flex-wrap wrap

.feature-item
	padding-right 1rem
	padding-left 1rem
	display flex
	flex-direction column
	// Adaptive styles
	margin-bottom 15px
	width 100%
	+media(sm)
		width 50%
	+media(lg)
		margin-bottom 0
		width 25%
	
	// Feature headings
	&__heading
		text-align center
	// Feature images
	&__img
		width 50px
		height 50px
		align-self center
		background-size cover
		background-position 50% 50%
		background-repeat no-repeat
		&--1
			background-image url("../imgs/icons/ico-feature-about.svg")
		&--2
			background-image url("../imgs/icons/ico-feature-trends.svg")
		&--3
			background-image url("../imgs/icons/ico-feature-color.svg")
		&--4
			background-image url("../imgs/icons/ico-feature-materials.svg")
	// Feature texts
	&__text
		// Adaptive styles
		margin-top 10px
		+media(sm)
			margin-top 20px
			padding-top 20px
			border-top $border-color




// Brands section
.container-brands
	border-top $border-color
	border-bottom $border-color
	background lighten($brand-4, 62)

.brands-list
	margin 20px 0 !important
	display flex
	align-items center
	justify-content center
	list-style none
	flex-wrap wrap
	&__item
		padding 20px 16px 20px 16px
		
	&__item-link
		text-decoration none
	&__item-img
		width 130px
		height auto
